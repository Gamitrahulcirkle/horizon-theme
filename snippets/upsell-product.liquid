{% comment %} 
    parameter: product,
    type: object
{% endcomment %}
{% if product %}
    <style>
        .upsell_product_wrap {
            border: 1px solid #e3e3e3;
            border-radius: 10px;
        }
        .upsell_product_wrap .upsell_product {
            display: flex;
            align-items: center;
            gap: 12px;
            border-radius: 8px;
            padding: 10px;
            transition: background 0.3s;
        }
        .upsell_product_wrap .upsell_product label {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            width: 100%;
        }
        .upsell_product_wrap .upsell_product h4 {
            font-size: 15px;
            font-weight: 500;
            margin: 0px;
        }
        .upsell_product_wrap .upsell_product img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 6px;
        }
        .upsell_product_wrap .upsell_product input[type="checkbox"] {
            transform: scale(1.3);
            margin-right: 10px;
            cursor: pointer;
        }
    </style>
    <div class="upsell_product_wrap">
        <div class="upsell_product">
            <input type="checkbox" id="upsell{{ forloop.index }}" class="upsell-checkbox" value="{{ product.first_available_variant.id }}" data-price="{{ product.price | money_without_currency }}">
            <label for="upsell{{ forloop.index }}">
                {% if product.featured_image != blank %}
                    {{ product.featured_image | image_url: width:product.featured_image.width | image_tag }}
                {% endif %}
                <div>
                    <h4>{{ product.title }}</h4>
                    <p>{{ product.price | money_with_currency }}</p>
                </div>
            </label>
        </div>
    </div>
{% endif %}